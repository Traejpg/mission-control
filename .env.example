// ==========================================
# VITE_GATEWAY_URL=ws://127.0.0.1:18789
# VITE_WATCHER_URL=ws://127.0.0.1:18791/ws

// ==========================================
// RAILWAY DEPLOYMENT
// Replace with your Railway app URL after deploying
// ==========================================
# VITE_GATEWAY_URL=wss://mission-control-backend-production.up.railway.app
# VITE_WATCHER_URL=wss://mission-control-backend-production.up.railway.app/ws

// ==========================================
// RENDER DEPLOYMENT
// Replace with your Render app URL after deploying
// ==========================================
# VITE_GATEWAY_URL=wss://mission-control-backend.onrender.com
# VITE_WATCHER_URL=wss://mission-control-backend.onrender.com/ws

// ==========================================
// FLY.IO DEPLOYMENT
// Replace with your Fly.io app URL after deploying
// ==========================================
# VITE_GATEWAY_URL=wss://mission-control-backend.fly.dev
# VITE_WATCHER_URL=wss://mission-control-backend.fly.dev/ws

